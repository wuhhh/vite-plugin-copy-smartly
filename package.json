  "license": "MIT",
	"peerDependencies": {
		"vite": "^3.0.0 || ^4.0.0 || ^5.0.0"
  },
  "devDependencies": {
		"esbuild": "^0.16.2"
  },
	"dependencies": {
		"chokidar": "^3.5.3",
		"fs-extra": "^10.0.0"
	},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wuhhh/vite-plugin-copy-smartly.git"
  },
  "homepage": "https://github.com/wuhhh/vite-plugin-copy-smartly#readme"
